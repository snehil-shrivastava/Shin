<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.MangaShrine" parent="Base.Theme.MangaShrine" />

    <style name="Base.Theme.MangaShrine" parent="Base.Theme.MaterialThemeBuilder">

        <!--Material color attributes (light theme) -->
        <!--colorPrimary colors map to components and elements, such as app bars and buttons. -->
        <!--colorSecondary colors are most often used as accents on components, such as FABs and -->
        <!--selection controls.-->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorSecondary">@color/green_200</item>
        <item name="colorSecondaryVariant">@color/green_500</item>
        <!--colorBackground appears behind scrollable content and is used for the default window-->
        <!--background. colorSurface is mapped to the surface of components such as cards, sheets-->
        <!--and menus. colorError is used to indicate an error state for components such as-->
        <!--text fields.-->
        <item name="android:colorBackground">@color/white_50</item>
        <item name="colorSurface">@color/white_50</item>
        <item name="colorError">@color/red_600</item>
        <!--"On" colors define how text, icons and strokes are colored in relation to the surface-->
        <!--on which they appear.-->
        <item name="colorOnPrimary">@color/white_50</item>
        <item name="colorOnSecondary">@color/black_900</item>
        <item name="colorOnBackground">@color/black_900</item>
        <item name="colorOnSurface">@color/black_900</item>
        <item name="colorOnError">@color/white_50</item>
        <!--Material type attributes-->
        <item name="textAppearanceHeadline1">@style/TextAppearance.AnimeShrineTheme.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.AnimeShrineTheme.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.AnimeShrineTheme.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.AnimeShrineTheme.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.AnimeShrineTheme.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.AnimeShrineTheme.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.AnimeShrineTheme.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.AnimeShrineTheme.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.AnimeShrineTheme.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.AnimeShrineTheme.Body2</item>
        <item name="textAppearanceButton">@style/TextAppearance.AnimeShrineTheme.Button</item>
        <item name="textAppearanceCaption">@style/TextAppearance.AnimeShrine.Caption</item>
        <item name="textAppearanceOverline">@style/TextAppearance.AnimeShrine.Overline</item>
        <!--Material shape attributes-->
        <item name="shapeAppearanceSmallComponent">
            @style/ShapeAppearance.AnimeShrine.SmallComponent
        </item>
        <item name="shapeAppearanceMediumComponent">
            @style/ShapeAppearance.AnimeShrine.MediumComponent
        </item>
        <item name="shapeAppearanceLargeComponent">
            @style/ShapeAppearance.AnimeShrine.LargeComponent
        </item>
        <!--Component styles-->
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.MaterialComponents.Dialog.Alert
        </item>
        <item name="bottomSheetDialogTheme">@style/ThemeOverlay.AnimeShrine.BottomSheetDialog</item>
        <item name="navigationViewStyle">@style/Widget.AnimeShrine.NavigationView</item>
        <item name="toolbarStyle">@style/Widget.MaterialComponents.Toolbar.PrimarySurface</item>
        <item name="android:navigationBarColor">@color/red_vintage</item>
        <item name="navigationBarTabColor">@color/white_50</item>
    </style>

    <style name="Base.Theme.MaterialThemeBuilder" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor" tools:ignore="NewApi">?attr/colorSurface</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
        <item name="android:navigationBarColor" tools:ignore="NewApi">
            ?android:attr/colorBackground
        </item>
        <item name="android:windowLightNavigationBar" tools:ignore="NewApi">true</item>
        <item name="android:navigationBarDividerColor" tools:ignore="NewApi">
            ?attr/colorControlHighlight
        </item>
    </style>

    <style name="Widget.MaterialComponents.TextInputLayout.FilledBox.Search" parent="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxCornerRadiusBottomStart" tools:override="true">4dp</item>
        <item name="boxCornerRadiusTopStart" tools:override="true">4dp</item>
        <item name="boxCornerRadiusTopEnd" tools:override="true">4dp</item>
        <item name="boxCornerRadiusBottomEnd" tools:override="true">4dp</item>
        <item name="boxStrokeWidth" tools:override="true">0dp</item>
        <item name="boxBackgroundMode">filled</item>
        <item name="boxStrokeWidthFocused" tools:override="true">0dp</item>
        <item name="editTextStyle">@style/Widget.MaterialComponents.TextView.Small</item>
        <item name="boxStrokeColor" tools:override="true">@android:color/transparent</item>
        <item name="shapeAppearanceOverlay">
            @style/ShapeAppearanceOverlay.AnimeShrine.TextInputLayout.FilledBox
        </item>
        <item name="android:height" tools:override="true">0dip</item>
        <item name="android:baselineAligned">true</item>
        <item name="android:inputType">text</item>
        <item name="endIconMode">clear_text</item>
        <item name="endIconDrawable">@drawable/ic_round_clear_24</item>
        <item name="hintEnabled">false</item>
        <item name="startIconDrawable">?android:attr/actionModeWebSearchDrawable</item>
    </style>

    <style name="Widget.MaterialComponents.TextView.Small" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_height" tools:override="true">36dp</item>
        <item name="android:textAppearance">@style/TextAppearance.AnimeShrineTheme.Subtitle2</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>


</resources>